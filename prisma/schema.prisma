generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Product {
  id Int @id
  name String
  price Float
  quantity Int
  type String
  description String?
  image String?
  creationDate DateTime @default(now())
}